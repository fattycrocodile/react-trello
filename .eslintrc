{
  "parser": "babel-eslint",
  "rules": {
    "strict": 1,
    "no-undef": 1,
    "no-fallthrough": 1,
    "react/prop-types": 2,
    "prettier/prettier": ["error", {
      "printWidth": 120,
      "singleQuote": true,
      "trailingComma": "none",
      "bracketSpacing": false,
      "jsxBracketSameLine": true,
      "arrowParens": "avoid",
      "semi": false,
      "tabWidth": 2,
      "useTabs": false
    }]
  },
  "extends": ["standard", "standard-react", "plugin:prettier/recommended"],
  "env": {
    "browser": true,
    "node": true
  }
}
